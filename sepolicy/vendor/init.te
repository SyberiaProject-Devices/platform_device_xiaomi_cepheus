# Allow init to mount wlan kernel module
allow init vendor_file:file { mounton };

# Allow init to mount light hal service
allow init vendor_file:file { execute };

# Allow init to mount vendor configs
allow init vendor_configs_file:file { mounton };

# For ANX
allow init system_file:file { execute_no_trans execute read write };
allow init vendor_file:file { execute_no_trans execute read write };
allow init vendor_toolbox_exec:file { execute_no_trans execute read write };
allow init storage_file:lnk_file { read write };
allow init mnt_user_file:lnk_file { read write };
allow init sdcardfs:dir { search read write add_name create };
allow init sdcardfs:file { create read write open };

